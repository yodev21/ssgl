<div class="main">
  <div class="form-group text-center">
    <h2 class="task-form-title">質問編集</h2>
  </div>
  <%= form_with model: @question, local: true do |f| %>
    
    <div class="form-group">
      <%= f.text_field :title, autofocus: true, placeholder: "タイトル", class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.text_area :content,  placeholder: "内容", class: "form-control",rows: "10", required: true %>
    </div>

    <div class="actions">
      <%= f.submit "登録", class: "btn btn-primary" %>
      <%= link_to "戻る", :back, class: "btn btn-outline-success" %>
    </div>
  <% end %>
</div>