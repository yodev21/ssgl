<div class="main">
  <div class="form-group text-center">
    <h2 class="task-form-title">質問</h2>
  </div>

  <%= form_with model: @question, url: questions_path(challenge_start_id: params[:challenge_start_id]), local: true do |f| %>

    <div class="form-group">
      <%= f.text_field :title, autofocus: true, placeholder: "タイトル", class: "form-control", required: true %>
    </div>
    
    <div class="form-group">
      <%= f.text_area :content,  placeholder: "内容", class: "form-control",rows: "10", required: true %>
    </div>


    <div class="actions">
      <%= f.submit "登録", class: "btn btn-primary w-100" %>
    </div>
  <% end %>
</div>