<div class="course-index">
  <div class="course-card">
    <span><%= image_tag avatar_url(@course), class: "course-round-img" %></span>
    <span><div class="course-title"><%= markdown(@course.title) %></div></span>
    <p><%= markdown(@course.content) %></p>
    <% if @challenge_course.nil? %>
      <%= link_to "このコースに取り組む",  challenge_courses_path(course_id: @course.id), method: :post, class: "btn btn-primary"%>
    <% end %>
  </div>
  <br>
  <h2>課題一覧</h2>
  <div class="course-tasks">
    <% @tasks.each do |task| %>
      <div class="row">
        <%= link_to(task_path(task) ,class: "course-link") do %>
          <div class="image-box-course">
              <%= image_tag task.image.url(:medium), class: "round-img float-md-left" %>
              <p><strong>タスク名:<%= task.title %></strong></p>
              <br>
              <p>内容:<%= markdown(task.content) %></p>
              <p class="team-time no-text-decoration"><%= "#{time_ago_in_words(task.updated_at).upcase}前" %></p>

          </div>
        <% end %>
      </div>
      <br>
    <% end %>
  </div>
</div>