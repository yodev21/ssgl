<div class="user-index">
  <h3 class="user-title">プロフィール</h3>
  <div class="user-card">
    <%= image_tag avatar_url(@user), class: "round-img" %>
    <span class="user-name"><%= @user.name %></span>
    <% if @user = current_user %>
      <%= @user.email %>  
    <% end %>
    <br>
    <% if @user == current_user && current_user.email != "guest@example.com"%>
      
      <%= link_to "プロフィール編集", edit_user_registration_path, 
                                    class: "btn btn-outline-success common-btn profile-btn" %>
    <% end %>
    <p><%= markdown(@user.profile) %></p>
  </div>
</div>
