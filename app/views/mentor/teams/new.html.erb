<div class="main">
  <div class="form-group text-center">
    <h3>チーム作成</h3>
  </div>
  <%= form_with model: @team, url: mentor_teams_path, class: "upload-images p-0 border-0", local: true do |f| %>
    
    <div class="form-group">
      <%= f.text_field :name, autofocus: true, placeholder: "チーム名", class: "form-control", required: true %>
    </div>

    <% unless @team.image? %>
      <%= image_tag "no_image.png", class: "round-img", id: :img_prev %>
    <% end %>
    <div class="form-group">
      <%= f.label :image, "photo_size_select_actual", class: "material-icons" %>
      <%= f.file_field :image, class: "form-control icon_image", required: true %>
        <script type="text/javascript">
          $(function() {
            function readURL(input) {
              if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                  $('#img_prev').attr('src', e.target.result);
                }
                reader.readAsDataURL(input.files[0]);
              }
            }
            $(".icon_image").change(function(){
              readURL(this);
            });
          });
        </script>
    </div>
    

    <div class="form-group">
      <%= f.text_area :remarks,  placeholder: "備考", class: "form-control",rows: "10" %>
    </div>

    <div class="actions">
      <%= f.submit "登録", class: "btn btn-primary w-100" %>
    </div>
  <% end %>
</div>