<div class="main">
  <div class="row">
    <div class="col-md-4 text-center">
      <%= image_tag team_icon_url(@team), class: "round-img" %>
    </div>
    <div class="col-md-8">
      <div class="row">
        <div class="row col-12">
          <h1><%= @team.name %></h1>
        </div>
        <%= link_to "チーム情報編集", edit_mentor_team_path(@team), class: "btn btn-outline-success  profile-btn" %>
        <%= link_to "チーム削除", mentor_team_path(@team), class: "btn btn-outline-danger  profile-btn", method: :delete, 
                                                                                               data: { confirm: "チームを削除してもよろしいですか？"} %>
      </div>
      <div class="row">
        <%= @team.remarks %>
      </div>
    </div>
  </div>
</div>
<div class="course-index">
  <h2>コース一覧</h2>
  <div class="course-tasks">
    <% @courses.each do |course| %>
      <div class="row">
        <%= link_to(mentor_course_path(course) ,class: "course-link") do %>
          <div class="image-box-course">
              <%= image_tag course.image.url(:medium), class: "round-img float-md-left" %>
              <p><strong>タスク名:<%= course.title %></strong></p>
              <br>
              <p>内容:<%= markdown(course.content) %></p>
              <p class="team-time no-text-decoration"><%= "#{time_ago_in_words(course.updated_at).upcase}前" %></p>

          </div>
        <% end %>
      </div>
      <br>
    <% end %>
  </div>
</div>
<% unless @assigns.nil? %>
  <%= render 'partial/belong_users', assigns: @assigns%>
<% end %>