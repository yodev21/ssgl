<div class="courses-index">
  <br>
  <br>
  <h2 class="course-title">コース</h2>
  <div class="course-card">
    <% @courses.each do |course| %>
      <div class="row">
        <%= link_to(mentor_course_path(course) , class: "courses-link") do %>
        <%= image_tag course.image.url(:medium), class: "course-round-img" %>
        <span><%= course.title %></span>
        <p><%= markdown(course.content) %></p>
        <p class="team-time no-text-decoration"><%= "#{time_ago_in_words(course.updated_at).upcase}前" %></p> 
        <% end %>
      </div>
      <br>
    <% end %>
  </div>
</div>
