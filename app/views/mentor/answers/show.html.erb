<div class="answer-show">
  <h2 class="answer-title">回答</h2>
  <div class="answer-card">
    <span><%= image_tag avatar_url(@answer.task), class: "answer-round-img" %></span>
    <span><%=@answer.task.title %></span>
    <p>URL<%=markdown(@answer.url) %></p>
    <p><%= markdown(@answer.content) %></p>

    <%= link_to mentor_challenge_tasks_path(id: @answer.challenge_start_id),
                                                  class: "btn btn-primary", 
                                                  method: :post, 
                                                  data: { confirm: "タスクを完了してもよろしいですか？"} do %>
      <i class="far fa-check-circle">合格</i>
    <% end %>
    
    <%= render partial: 'comments/form', locals: { comment: @comment } %>
  </div>
</div>
<div id="comments_area">
  <%= render partial: 'comments/index', locals: { comments: @comments } %>
</div>