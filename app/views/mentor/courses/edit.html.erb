<div class="main">
  <h2 class="challenge-courses-title">コース修正</h2>
  <div class="card form-card">
    <div class="form-wrap">
      <div class="form-group text-center">
      </div>
      <%= form_with model: @course, url: mentor_course_path(@course), local: true do |f| %>
        
        <div class="form-group">
          <%= f.text_field :title, autofocus: true, placeholder: "コース名", class: "form-control", required: true %>
        </div>
          
        <%= image_tag @course.image.url, id: :img_prev, class: "round-img" if @course.image? %>
        <div class="form-group">
          <%= f.label :image, "photo_size_select_actual", class: "material-icons" %>
          <%= f.file_field :image, placeholder: "課題アイコン", class: "fom-control icon_image" %>
            <script type="text/javascript">
              $(function() {
                function readURL(input) {
                  if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                      $('#img_prev').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                  }
                }
                $(".icon_image").change(function(){
                  readURL(this);
                });
              });
            </script>
        </div>

        <div class="form-group">
          <%= f.text_area :content,  placeholder: "内容", class: "form-control",rows: "10", required: true %>
        </div>

        <div class="form-group">
          <%=  f.select :status, [['公開', :release], ['限定公開', :limited_release], ['非公開', :secret]], {}, {class: "form-control"} %>
        </div>
        
        <div class="actions">
          <%= f.submit "登録", class: "btn btn-primary w-100" %>
        </div>
      <% end %>
    </div>
  </div>
</div>