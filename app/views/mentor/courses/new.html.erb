<div class="main">
  <div class="card form-card">
    <div class="form-wrap">
      <div class="form-group text-center">
        <h3>コース作成</h3>
      </div>
      <%= form_with model: @course, url: mentor_courses_path(team_id: params[:team_id]), local: true do |f| %>
        
        <div class="form-group">
          <%= f.text_field :title, autofocus: true, placeholder: "課題名", class: "form-control", required: true %>
        </div>

        <% unless @course.image? %>
         <%= image_tag "no_image.png", class: "round-img", id: :img_prev %>
        <% end %>
        <div class="form-group">
            <%= f.label :image, "photo_size_select_actual", class: "material-icons" %>
          <%= f.file_field :image, placeholder: "コースアイコン", class: "fom-control icon_image", required: true %>
            <script type="text/javascript">
              $(function() {
                function readURL(input) {
                  if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                      $('#img_prev').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                  }
                }
                $(".icon_image").change(function(){
                  readURL(this);
                });
              });
            </script>
        </div>

        <div class="form-group">
          <%= f.text_area :content,  placeholder: "内容", class: "form-control",rows: "10", required: true %>
        </div>

        <div class="form-group">
          <%=  f.select :status, [['公開', :release], ['限定公開', :limited_release], ['非公開', :secret]], {}, {class: "form-control"} %>
        </div>
        <br>
        <div class="actions">
          <%= f.submit "登録", class: "btn btn-primary w-100" %>
        </div>
      <% end %>
    </div>
  </div>
</div>