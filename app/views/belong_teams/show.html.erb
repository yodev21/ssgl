<div class="belong-team-index">
  <h2 class="belong-team-title">チーム</h2>
  <div class="belong-team-card">
    <span><%= image_tag avatar_url(@team), class: "belong-team-round-img" %></span>
    <span class="belong-team-name"><%=@team.name %></span>
    <p><%= markdown(@team.remarks) %></p>
  </div>
  <br>
  <h2 class="belong-course-title">コース</h2>
  <div class="belong-courses">
    <% @courses.each do |course| %>
      <div class="row">
        <%= link_to(course_path(course) ,class: "belong-course-link") do %>
        <%= image_tag course.image.url(:medium), class: "belong-course-round-img" %>
        <span class="course-title"><%= course.title %></span>
        <p><%= markdown(course.content) %></p>
        <p class="team-time no-text-decoration"><%= "#{time_ago_in_words(course.updated_at).upcase}前" %></p> 
        <% end %>
      </div>
      <br>
    <% end %>
  </div>
</div>