<div class="main">
  <%= form_with model: @user, url:administrators_path, method: :post,  local: true  do |f| %>
    
    <div class="form-group">
      <%= f.label :name, "名前" %>
      <%= f.text_field :name, autofocus: true, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :admin, "管理者権限"  %>
      <%= f.check_box :admin %>
    </div>

    <div class="form-group">
      <%= f.file_field :image, placeholder:"アイコン", class: "fom-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.text_area :profile, placeholder: "プロフィール", class: "form-control", required: true%>
    </div>

    <div class="form-group">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: "form-control", required: true %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "パスワード確認" %>
      <%= f.password_field :password_confirmation, class: "form-control", required: true %>
    </div>

    <%= f.submit "更新", class: "btn btn-primary" %>
  <% end %>
</div>