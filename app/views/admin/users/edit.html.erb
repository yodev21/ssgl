<div class="main">
  <div class="row">
    <div class="col-md-8 mx-auto">
      <div class="profile-form-wrap">
        <%= form_with model: @user, url: admin_user_path(@user), local: true, method: :patch do |f| %>
          
          <div class="form-group">
            <%= f.label :name, "名前" %>
            <%= f.text_field :name, autofocus: true, class: "form-control", required: true %>
          </div>

          <div class="form-group">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, class: "form-control", required: true %>
          </div>

          <%= image_tag @user.image.url, id: :img_prev, class: "round-img" if @user.image? %>
          <div class="form-group">
            <%= f.label :image, "photo_size_select_actual", class: "material-icons" %>
            <%= f.file_field :image, placeholder:"アイコン", class: "fom-control icon_image"%>
            <script type="text/javascript">
              $(function() {
                function readURL(input) {
                  if (input.files && input.files[0]) {
                    var reader = new FileReader();
                    reader.onload = function (e) {
                      $('#img_prev').attr('src', e.target.result);
                    }
                    reader.readAsDataURL(input.files[0]);
                  }
                }
                $(".icon_image").change(function(){
                  readURL(this);
                });
              });
            </script>
          </div>

          <div class="form-group">
            <%= f.label :admin, "管理者権限" %>
            <%= f.check_box :admin %>
          </div>

          <div class="form-group">
            <%= f.text_area :profile, placeholder: "プロフィール", class: "form-control", rows: "10" %>
          </div>

          <div class="form-group">
            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= f.label :password_confirmation, "パスワード確認" %>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>

          <%= f.submit "更新", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>