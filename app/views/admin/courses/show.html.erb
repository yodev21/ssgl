<div class="course-show">
  <h2 class="courses-title">コース</h2>
  <div class="course-card">
    <span><%= image_tag avatar_url(@course), class: "course-round-img" %></span>
    <span><div class="course-title"><%= markdown(@course.title) %></div></span>
    <p><%= markdown(@course.content) %></p>

    <%= link_to "削除", admin_course_path(@course), class: "btn btn-danger", method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}%>
    
    <h2 class="task-title">タスク</h2>
    <div class="course-tasks">
      <% @tasks.each do |task| %>
        <div class="row">
          <%= link_to(task_path(task) ,class: "tasks-link") do %>
            <%= image_tag task.image.url(:medium), class: "tasks-round-img" %>
            <span><%= task.title %></strong></span>
            <br>
            <p><%= task.content.truncate(50) %></p>
            <p class="team-time no-text-decoration"><%= "#{time_ago_in_words(task.updated_at).upcase}前" %></p>
          <% end %>
        </div>
        <br>
      <% end %>
    </div>
  </div>
</div>