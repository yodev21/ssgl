<div class="teams-index">
  <br>
  <h2 class="teams-title row">チーム</h2><br>
  <div class="teams-card">
    <div class="row">
      <%= form_with(url: teams_search_path, local: true, method: :get, class: "form-inline") do |f| %>
        <%= f.text_field :search_name, class: "form-control mr-sm-2", placeholder: "チーム名" %>
        <%= f.button type: "submit", class: "btn btn-outline-primary" do %>
          <i class="fa fa-search"></i>
        <% end %>
      <% end %>
    </div>
    <% @teams.each do |team|%>
      <div class="row">
        <%= link_to(team_path(team) , class: "teams-link") do %>
          <%= image_tag team.image.url(:medium), class: "teams-round-img" %>
          <span class="courses-title"><%= team.name %></span>
          <p><%= markdown(team.remarks.truncate(50)) %></p>
          <p class="team-time no-text-decoration"><%= "#{time_ago_in_words(team.updated_at).upcase}前" %></p>
        <% end %>
      </div>
  <% end %>
  </div>
</div>